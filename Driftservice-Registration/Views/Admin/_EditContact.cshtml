@model Driftservice_Registration.Models.Contact

<div class="modal-header" style="background: cornflowerblue; color: white;">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="modalTitle">Ändra Kontakt</h4>
</div>
@using (Html.BeginForm())
{
    <div class="modal-body">
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ContactID)
            <div class="form-group">
                <div class="col-lg-3">
                    <label>Förnamn</label>
                </div>
                <div class="col-lg-9">
                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-3">
                    <label>Efternamn</label>
                </div>
                <div class="col-lg-9">
                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-3">
                    <label>Företag</label>
                </div>
                <div class="col-lg-9">
                    @Html.EditorFor(model => model.Business, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Business, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-3">
                    <label>Email</label>
                </div>
                <div class="col-lg-9">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-3">
                    <label>Telefon</label>
                </div>
                <div class="col-lg-9">
                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-3">
                    <label>Kontaktmetod</label>
                </div>
                <div class="col-lg-9">
                    <div class="form-block">
                        <input type="checkbox" name="EmailChecked" value="true" /><label style="margin-left: 5px; margin-right: 10px">Email</label>
                        <input type="checkbox" name="SmsChecked" value="true" /><label style="margin-left: 5px">Sms</label><br />
                        @Html.ValidationMessageFor(model => model.NotificationType, "", new { @class = "text-danger" })
                    </div>
                    @Html.ValidationMessageFor(model => model.NotificationType, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-3">
                    <label>Språk</label>
                </div>
                <div class="col-lg-9">
                    @Html.DropDownListFor(m => m.Language, new SelectListItem[]{
                        new SelectListItem() {Text = "Svenska", Value="1"},
                        new SelectListItem() {Text = "Engelska", Value="2"},
                        new SelectListItem() {Text = "Tyska", Value="3"}}, new { @style = "width: 120px; height: 30px; padding: 5px;", @class="form-control" })
                    @Html.ValidationMessageFor(model => model.Language, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer" style="background: cornflowerblue;">
        <button class="btn btn-danger" data-dismiss="modal">Avbryt</button>
        <button class="btn btn-success" onclick="EditContact()">Spara</button>
    </div>
}